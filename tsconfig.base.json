{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@nx-dapp/shared/connection/data-access/connections": [
        "libs/shared/connection/data-access/connections/src/index.ts"
      ],
      "@nx-dapp/shared/connection/data-access/endpoints": [
        "libs/shared/connection/data-access/endpoints/src/index.ts"
      ],
      "@nx-dapp/shared/connection/data-access/tokens": [
        "libs/shared/connection/data-access/tokens/src/index.ts"
      ],
      "@nx-dapp/shared/connection/ui/connections-dropdown": [
        "libs/shared/connection/ui/connections-dropdown/src/index.ts"
      ],
      "@nx-dapp/shared/connection/ui/wallets-dropdown": [
        "libs/shared/connection/ui/wallets-dropdown/src/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
